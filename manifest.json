{
  "manifest_version": 3,
  "name": "Azure DevOps Side Preview",
  "version": "0.1.0",
  "description": "Moves the Azure DevOps Markdown preview to the right and keeps the toolbar on its own row.",
  "content_scripts": [
    {
      "matches": [
        "https://dev.azure.com/*",
        "https://*.visualstudio.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
